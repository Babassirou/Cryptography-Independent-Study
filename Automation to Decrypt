def decrypt_message(encrypted_numbers, num_shifts):
    decrypted_message = []
    numbers = encrypted_numbers.split()
    for num in numbers:
        char_code = int(num)
        if chr(char_code).isalpha():
            if chr(char_code).islower():
                decrypted_char = chr(((char_code - ord('a') - num_shifts) % 26) + ord('a'))
            else:
                decrypted_char = chr(((char_code - ord('A') - num_shifts) % 26) + ord('A'))
            decrypted_message.append(decrypted_char)
        else:
            decrypted_message.append(chr(char_code))

    return "".join(decrypted_message)

# Input encrypted message as numbers and number of shifts
encrypted_numbers = input("Enter the encrypted message as numbers (separated by spaces): ")
num_shifts = int(input("Enter the number of shifts: "))

original_message = decrypt_message(encrypted_numbers, num_shifts)
print("Original message: " + original_message)
