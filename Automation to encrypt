def encrypt_message(message, num_shifts):
    encrypted_numbers = []
    for char in message:
        if char.isalpha():
            if char.islower():
                encrypted_char = chr(((ord(char) - ord('a') + num_shifts) % 26) + ord('a'))
            else:
                encrypted_char = chr(((ord(char) - ord('A') + num_shifts) % 26) + ord('A'))
            encrypted_numbers.append(str(ord(encrypted_char)))
        else:
            encrypted_numbers.append(str(ord(char)))

    return " ".join(encrypted_numbers)

# Input message and number of shifts
message = input("Enter the message to encrypt: ")
num_shifts = int(input("Enter the number of shifts: "))

encrypted_message = encrypt_message(message, num_shifts)
print("Encrypted message as numbers: " + encrypted_message)
